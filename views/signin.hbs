<div class="container h-100">
        <div class="row d-flex justify-content-center">
            <div style="width: 32rem">
                <div class="card mt-5 main-card">
                    <div class="card-body">
                        <h1 class="text-center">Sign In</h1>
                        <form name="MyEventForm">
                            <div class="row d-flex justify-content-center">
                                <div class="card card-mail" style="width: 30rem">
                                    <div class="card-body">
                                        <input name="Email" type="text" class="form-control" placeholder="Email*"
                                            aria-label="Name" aria-describedby="basic-addon1" required/>
                                    </div>
                                </div>
                            </div>

                            <div class="row d-flex justify-content-center">
                                <div class="card card-ph" style="width: 30rem">
                                    <div class="card-body">
                                        <input name="Password" type="password" class="form-control" placeholder="Password*"
                                            aria-label="Name" aria-describedby="basic-addon1" required/>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center mt-3">
                                <button type="reset" class="btn btn-success btn-form btn-form-1">
                                    <span class="btn-txt">Reset</span>
                                </button>
                                <button type="submit" class="btn-success btn-form btn ms-3">
                                    <span class="btn-txt">SignIn</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>